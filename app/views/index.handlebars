  <div class="container">
      <div class="header clearfix">
        <a href="/"><h3 class="title">OpenGraph Spy</h3></a>
      </div>

{{#if url}}
      <div class="panel panel-default">
        <div class="panel-heading metadata-url"><a href="{{url}}">{{url}}</a></div>
        <table class="table metadata-table">
          <thead>
            <tr>
              <th>Property</th>
              <th>Value</th>
            </tr>
          </thead>
          <tbody>
            {{#metadata-list md}}{{/metadata-list}}
          </tbody>
          <tfoot>
            <tr>
              <td colspan="2"><h4>Check another site?</h4></td>
            </tr>
          </tfoot>
        </table>
      </div>
{{/if}}

      <div class="jumbotron">
        <p class="lead">Enter a webpage url to find open graph metadata:</p>
        <form action="/" method="get">
          <div class="input-group input-group-lg">
            <input id="url" name="url" type="text" class="form-control" placeholder="https://www.webpage.com" />
            <span class="input-group-btn"><button type="submit" class="btn btn-lg btn-primary">Parse</button></span>
          </div>
        </form>

